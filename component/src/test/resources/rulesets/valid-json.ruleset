{
  "aliases": {
    "HeaderNames": [
      "$..parameters.[?(@.in === 'header')].name"
    ],
    "Info": [
      "$..info"
    ],
    "Paths": [
      "$.paths[*]~"
    ]
  },
  "rules": {
    "api-servers": {
      "description": "\"servers\" must be present and non-empty array.",
      "recommended": true,
      "given": "$",
      "then": {
        "field": "servers",
        "function": "schema",
        "functionOptions": {
          "dialect": "draft7",
          "schema": {
            "items": {
              "type": "object",
            },
            "minItems": 1,
            "type": "array"
          }
        }
      }
    },
    "info-contact": {
      "description": "Info object must have a \"contact\" object.",
      "recommended": true,
      "type": "style",
      "given": "$",
      "then": {
        "field": "info.contact",
        "function": "truthy",
      }
    },
    "info-description": {
      "description": "Info \"description\" must be present and non-empty string.",
      "recommended": true,
      "type": "style",
      "given": "$",
      "then": {
        "field": "info.description",
        "function": "truthy"
      }
    }
  }
}
